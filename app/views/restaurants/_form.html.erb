<h1>Add a New Restaurant!</h1>

<%= form_for @restaurant do |f| %> 

    <%= f.label :name %>
    <%= f.text_field :name %>
        <br></br>

    <%= f.label :type %>
    <%= f.select :type, options_for_select(["fast food", "fast casual", "steakhouse", "diner", "fine dining", "other"]), include_blank: true %>
        <br></br>


    <%= f.label :price_range %>
    <%= f.select :price_range, options_for_selecct(["$", "$$", "$$$"])%> 
        <br></br>


    <%= f.label :address, "address" %>
    <%= f.text_field :address, "address" %>

    <%= f.label :city  %>
    <%= f.text_field :city %>

    <%= f.label :state_abbreviation %> 
    <%= f.text_field :state_abbreviation %> 

    <%= f.label :zip_code %> 
    <%= f.text_field :zip_code %> 
    <br></br> 

    
    <%= f.submit %>
    <% end %>
