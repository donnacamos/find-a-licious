<!DOCTYPE html>
<html>
  <head>
    <title>Find-A-Licious</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if logged_in? %> 
    <nav class='navbar'>
   <button><%= link_to 'Log Out', '/logout', method: :delete %></button>  

    <button><%= link_to 'My Restaurants', restaurants_path, class:'button' %></button>

    <button><%= link_to 'All Restaurants', all_restaurants_path, class:'button' %></button>

    <button><%= link_to 'Add a Restaurant', new_restaurant_path, class:'button' %></button>

    <button><%= link_to 'All Cities', cities_path, class:'button' %></button>

    <button><%= link_to 'All Reviews', reviews_path, class:'button' %></button>

    <button><%= link_to 'Add a Review', reviews_path, class:'button' %></button>
    </nav> 
    <% else %>
      <%= link_to 'Log In', login_path %>
    <% end %>
    <div class='container'>
    <%= yield %>
    </div> 
  </body>
</html>
